{
    "name": "pesakite/mpesa",
    "description": "Comprehensive Mpesa PHP package",
    "keywords": [
        "pesakite",
        "Mpesa"
    ],
    "homepage": "https://github.com/pesakite/mpesa",
    "license": "MIT",
    "authors": [
        {
            "name": "Malik Mwamodo",
            "email": "erick@mwamodo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Pesakite\\Mpesa\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pesakite\\Mpesa\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
